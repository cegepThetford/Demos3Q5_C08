<Window x:Class="Demos3Q5_C08_UI.Demo3"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Demo3" Height="250" Width="300">
    <Window.Resources>
        <Style TargetType="Button">
            <Setter Property="Background" Value="Cyan" />
            <Setter Property="FontSize" Value="32"/>
            <EventSetter Event="Click" Handler="btTest_Click" />
        </Style>
    </Window.Resources>
    <StackPanel Name="stack1">
        <Button Name="bt1" Content="Test"/>
        <Button Name="bt2" Content="Test"/>
        <Button Name="bt3" Content="Test" Style="{x:Null}"/>
        <Button Name="bt4" Content="Test"/>
    </StackPanel>
</Window>
